/*MAIN*/
QMainWindow,
QDockWidget {
    background-color: transparent; 
}

QWidget {
    border-color: rgba(0, 0, 0, 8);
    background-color: transparent;
    font-family: "Segoe UI Variable Regular Text", serif;
    font-size: 13px;
    border-radius: 5px;
}

QObject,
QObject::separator,
QObject::handle,
QObject::tab-bar,
QObject::tab,
QObject::section {
    outline: 0;
    selection-color: #202020;
    color: #202020;
    border-radius: 2px;
    selection-background-color: rgba(0, 0, 0, 20);
    alternate-background-color: transparent;
}

QDialog,
QWizard *,
QCalendarWidget *,
#qswPages > QObject {
    background-color: transparent;
    color: #202020; 
}

/*TOOLBUTTON*/
QToolBar {
    background-color: transparent;
    spacing: 0;
    padding: 7px;
}

QToolBar::separator {
    background: transparent;
    height: 0px;
    margin: 0px;
    width: 0px; 
}

QToolButton {
    color: #202020;
    background-color: rgba(0, 0, 0, 18);
    border-radius: 5px;
    padding: 3px;
    margin: 1px; 
    margin-left: 5px;
    margin-right: 5px;
}

QToolButton:on {
    background-color: rgba(0, 0, 0, 18);
}

QToolButton:hover {
    background-color: rgba(0, 0, 0, 23);
}

QToolButton:pressed {
    background-color: rgba(0, 0, 0, 7);
    border: 1px solid rgba(0, 0, 0, 8);
    color: #404040;
}

QToolButton::menu-arrow,
QToolButton::menu-indicator,
QPushButton::menu-arrow,
QPushButton::menu-indicator {
    image: none;
}

/*MENU*/
QMenuBar {
    background-color: transparent;
    color: #202020;
    padding: 5px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 6px 10px;
    margin-left: 4px;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: rgba(0, 0, 0, 20);
}

QMenuBar::item:pressed {
    background-color: rgba(0, 0, 0, 13);
    color: #404040;
}

QMenu {
    background-color: #f3f3f3;
    padding-left: 3px;
    padding-right: 3px;
    padding-top: 1px;
    border: 1px solid rgba(0, 0, 0, 8);
    border-radius: 0px;
}

QMenu::indicator,
QMenu::icon {
    left: 4px; 
}

QMenu::separator {
    height: 0px;
    margin: 0px;
}

QMenu::item {
    background-color: transparent;
    padding: 5px 15px;
    border-radius: 5px;
    min-width: 60px;
    margin-top: 3px;
    margin-bottom: 3px;
}

QMenu::item:selected {
    background-color: rgba(0, 0, 0, 16);
}

QMenu::item:pressed {
    background-color: rgba(0, 0, 0, 10);
}

QMenu::right-arrow {
    image: url(:/uitheme/controls/light/TreeViewClose.svg);
    min-width: 40px;
    min-height: 18px;
}

QMenuBar:disabled {
    color: rgba(0, 0, 0, 110);
}

QMenu::item:disabled {
    color: rgba(0, 0, 0, 110);
    background-color: transparent;
}

/*PUSHBUTTON*/
QPushButton {
    background-color: rgba(0, 0, 0, 18);
    border-radius: 5px;
    color: #202020;
    padding: 7px 20px; 
    margin-right: 5px;
}

QPushButton:hover {
    background-color: rgba(0, 0, 0, 23);
}

QPushButton:pressed,
QPushButton:pressed:focus {
    background-color: rgba(0, 0, 0, 7);
    border: 1px solid rgba(0, 0, 0, 8);
    color: #333333;
}

/*GROUPBOX*/
QGroupBox {
    border-radius: 5px;
    border: 1px solid rgba(0, 0, 0, 3);
    margin-top: 23px;
    background-color: rgba(0, 0, 0, 5);
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    background-color: rgba(0, 0, 0, 16);
    padding: 3px 15px;
    margin-left: 5px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
}

QGroupBox::title::disabled {
    color: rgba(0, 0, 0, 110);
}

/*LISTVIEW*/
QListView {
}

QListView::indicator,
QListView::text,
QListView::icon {
    left: 4px; 
}

QListView::item {
    padding-top: 5px;
    padding-bottom: 5px; 
    margin-bottom: 5px;
    border-radius: 5px;
}

QListView::item:hover {
    background-color: rgba(0, 0, 0, 18);
}

QListView::item:selected {
    border-radius: 5px;
    outline: 0;
    background-color: rgba(0, 0, 0, 13);
    border-color: rgba(0, 0, 0, 0);
}

/*TREEVIEW*/
QTreeView {
    background-color: transparent;
    color: #202020;
    outline: 0;
    selection-background-color: rgba(0, 0, 0, 100);
}

QTreeView::indicator,
QTreeView::icon {
    margin: 6px; 
}

QTreeView::item {
    color: #202020;
    min-width: 60px;
    padding: 3px 4px;
    background-color: transparent;
    outline: 0;
}

QTreeView::item:hover,
QTreeView::item:focus {
    background-color: rgba(0, 0, 0, 0.1);
    outline: 0;
}

QTreeView::item:selected {
    color: #202020;
    background-color: rgba(0, 0, 0, 0.05);
    outline: 0;
}

QTreeView::item:selected:active {
    background-color: rgba(0, 0, 0, 0.05);
    outline: 0;
}

QTreeView::branch:has-children:closed {
    image: url(:/uitheme/controls/light/TreeViewClose.svg); 
}

QTreeView::branch:has-children:open {
    image: url(:/uitheme/controls/light/TreeViewOpen.svg); 
}

QCheckBox:branch {
    padding: 2px;
}

QCheckBox::branch:has-children:closed {
    image: url(:/uitheme/controls/light/TreeViewClose.svg); 
}

QCheckBox::branch:has-children:open {
    image: url(:/uitheme/controls/light/TreeViewOpen.svg); 
}

/*HEADERVIEW*/
QHeaderView {
    font-family: "Segoe UI Variable Regular Small", serif;
    font-size: 12px;
    background-color: transparent; 
    text-align: center;
    qproperty-defaultAlignment: AlignVCenter;
}

QHeaderView::section {
    background-color: rgba(0, 0, 0, 0.05);
    color: #333333;
    padding: 4px;
    padding-left: 8px;
    padding-right: 20px;
    border-radius: 0;
}

QHeaderView::section:hover {
    background-color: rgba(0, 0, 0, 0.1);
}

QHeaderView::up-arrow {
    margin-top: 2px;
    margin-bottom: 2px;
    margin-right: 5px;
    width: 19px;
    height: 13px;
}

QHeaderView::down-arrow {
    margin-bottom: 4px;
    margin-right: 5px;
    width: 19px;
    height: 13px;
}

QHeaderView::up-arrow {
    image: url(:/uitheme/controls/light/SpinBoxDown.svg); 
}

QHeaderView::down-arrow {
    image: url(:/uitheme/controls/light/SpinBoxUp.svg);
}

/*TABWIDGET*/
QTabWidget::pane {
    border: 0px solid rgba(0, 0, 0, 40);
    border-radius: 5px;
}

QTabWidget::tab-bar {
    left: 15px;
}

QTabBar::tab {
    background-color: rgba(0, 0, 0, 0);
    padding: 8px 15px;
    margin-right: 2px;
    margin-bottom: 2px;
    border-radius: 5px;
}

QTabBar::tab:hover {
    background-color: rgba(0, 0, 0, 13);
}

QTabBar::tab:selected {
    background-color: rgba(0, 0, 0, 16);
}

QTabBar::tab:disabled {
    color: rgba(0, 0, 0, 110);
}

/*SCROLL VERTICAL*/
QScrollBar:vertical {
    border: 6px solid rgba(0, 0, 0, 0);
    background-color: transparent;
    margin: 0px 0px 0px 0px;
    width: 16px;
}

QScrollBar:vertical:hover {
    border: 5px solid rgba(0, 0, 0, 0);
}

QScrollBar::handle:vertical {
    background-color: rgba(0, 0, 0, 110);
    border-radius: 2px;
    min-height: 25px;
}

QScrollBar::sub-line:vertical {
    image: url(:/uitheme/controls/light/ScrollBar.png);
    subcontrol-position: top;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical:hover {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::sub-line:vertical:pressed {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::add-line:vertical {
    image: url(:/uitheme/controls/light/ScrollBar.png);
    subcontrol-position: bottom;
    subcontrol-origin: margin;
}

QScrollBar::add-line:vertical:hover {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::add-line:vertical:pressed {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

/*SCROLL HORIZONTAL*/
QScrollBar:horizontal {
    border: 6px solid rgba(0, 0, 0, 0);
    background-color: transparent;
    margin: 0px 0px 0px 0px;
    height: 16px;
}

QScrollBar:horizontal:hover {
    border: 5px solid rgba(0, 0, 0, 0);
}

QScrollBar::handle:horizontal {
    background-color: rgba(0, 0, 0, 110);
    border-radius: 2px;
    min-width: 25px;
}

QScrollBar::sub-line:horizontal {
    image: url(:/uitheme/controls/light/ScrollBar.png);
    subcontrol-position: left;
    subcontrol-origin: margin;
}

QScrollBar::sub-line:horizontal:hover {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::sub-line:horizontal:pressed {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::add-line:horizontal {
    image: url(:/uitheme/controls/light/ScrollBar.png);
    subcontrol-position: right;
    subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal:hover {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::add-line:horizontal:pressed {
    image: url(:/uitheme/controls/light/ScrollBar.png);
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

QAbstractScrollArea {
  background-color: transparent; 
}

/*PROGRESSBAR*/
QProgressBar {
    text-align: right;
    background-color: qlineargradient(spread:reflect, x1:0.5, y1:0.5, x2:0.5, y2:1, stop:0.119403 rgba(0, 0, 0, 250), stop:0.273632 rgba(255, 255, 255, 0));
    border-radius: 2px;
    margin-right: 40px;
    margin-top: 12px;
    margin-bottom: 12px;
}

QProgressBar::chunk {
    background-color: #39a564;
    border-radius: 2px;
}

