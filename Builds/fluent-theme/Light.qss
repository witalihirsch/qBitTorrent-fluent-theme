/*SPINBOXES*/
QSpinBox {
    background-color: rgba(0, 0, 0, 10);
    border: 1px solid rgba(0, 0, 0, 8);
    border-radius: 5px;
    padding-left: 10px;
    padding-top: 6px;
    padding-bottom: 6px;
    min-width: 60px;
    border-bottom: 1px solid rgba(0, 0, 0, 100);
}

QSpinBox:hover {
    background-color: rgba(0, 0, 0, 16);
    border: 1px solid rgba(0, 0, 0, 10);
    border-bottom: 1px solid rgba(0, 0, 0, 100);
}

QSpinBox::focus {
    background-color: rgba(0, 0, 0, 5);
    border: 1px solid rgba(0, 0, 0, 8);
    color: rgba(0, 0, 0, 200);
    border-bottom: 2px solid #005fb8;
}

QSpinBox::up-button {
    image: url(:/uitheme/controls/light/SpinBoxUp.svg);
    background-color: rgba(0, 0, 0, 0);
    border: 1px solid rgba(0, 0, 0, 0);
    border-radius: 4px;
    margin-top: 1px;
    margin-bottom: 1px;
    margin-right: 3px;
    min-width: 25px;
    max-width: 25px;
    min-height: 15px;
}

QSpinBox::up-button:hover {
    background-color: rgba(0, 0, 0, 13);
}

QSpinBox::up-button:pressed {
    background-color: rgba(0, 0, 0, 5);
}

QSpinBox::down-button {
    image: url(:/uitheme/controls/light/SpinBoxDown.svg);
    background-color: rgba(0, 0, 0, 0);
    border: 1px solid rgba(0, 0, 0, 0);
    border-radius: 4px;
    margin-top: 1px;
    margin-bottom: 1px;
    margin-right: 3px;
    min-width: 25px;
    max-width: 25px;
    min-height: 15px;
}

QSpinBox::down-button:hover {
    background-color: rgba(0, 0, 0, 13);
}

QSpinBox::down-button:pressed {
    background-color: rgba(0, 0, 0, 5);
}

QSpinBox::drop-down {
    background-color: transparent;
    width: 50px;
}

QSpinBox:disabled {
    color: rgba(0, 0, 0, 110);
    background-color: rgba(0, 0, 0, 13);
    border: 1px solid rgba(0, 0, 0, 5);
}

QSpinBox::up-button:disabled {
    image: url(:/uitheme/controls/light/SpinBoxUpDisabled.svg);
}

QSpinBox::down-button:disabled {
    image: url(:/uitheme/controls/light/SpinBoxDownDisabled.svg);
}

